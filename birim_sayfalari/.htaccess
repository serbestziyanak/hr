RewriteEngine On
RewriteBase /

# Eğer isteğin hedefi gerçek bir dosya ya da klasör DEĞİLSE
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Öncelikle /muhendislik-fakultesi/about-us gibi URL'leri ele alalım
RewriteRule ^([a-zA-Z0-9_-]+)/([a-zA-Z0-9_-]+)/?$ hr/birim_sayfalari/index.php?kisa_ad=$1&sayfa_kisa_ad=$2 [L,QSA]

# Ardından sadece /muhendislik-fakultesi gibi URL'leri ele alalım
RewriteRule ^([a-zA-Z0-9_-]+)/?$ hr/birim_sayfalari/index.php?kisa_ad=$1 [L,QSA]